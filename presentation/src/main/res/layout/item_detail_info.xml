<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_info_rectangle"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_info"
            android:layout_width="34dp"
            android:layout_height="34dp"

            android:foregroundGravity="top"

            android:layout_marginVertical="18dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_address"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_bold"
            android:text="이름"
            android:textColor="@color/gray_900"
            android:textSize="16dp"

            android:layout_marginStart="14dp"
            android:layout_marginTop="-4dp"

            app:layout_constraintStart_toEndOf="@+id/img_info"
            app:layout_constraintTop_toTopOf="@+id/img_info" />

        <TextView
            android:id="@+id/txt_info_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_light"
            android:text="https://blog.yena"
            android:textColor="@color/gray_500"
            android:textSize="14dp"
            android:paddingBottom="14dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_info_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_info_title" />

        <TextView
            android:id="@+id/txt_extra_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="18dp"
            android:textSize="12dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/blue_500"
            android:text="연락처 저장하기"

            app:layout_constraintBottom_toBottomOf="@+id/txt_info_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_info_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>